{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "controller",
    "creationTimestamp": null,
    "labels": {
      "io.kompose.service": "controller"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "controller",
        "image": "emission/test-controller:1.0",
        "ports": [
          {
            "containerPort": 8000
          }
        ],
        "env": [
          {
            "name": "DB_HOST",
            "value": "db"
          },
          {
            "name": "WEB_SERVER_HOST",
            "value": "0.0.0.0"
          }
        ],
        "resources": {}
      }
    ],
    "restartPolicy": "OnFailure"
  },
  "status": {}
}
