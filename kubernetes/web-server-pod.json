{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "web-server",
    "creationTimestamp": null,
    "labels": {
      "io.kompose.service": "web-server"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "web-server",
        "image": "gcr.io/upc-masters/test-server:1.0",
        "ports": [
          {
            "containerPort": 80
          }
        ],
        "env": [
          {
            "name": "DB_HOST",
            "value": "localhost"
          },
          {
            "name": "WEB_SERVER_HOST",
            "value": "localhost"
          }
        ],
        "resources": {}
      },
      {
        "name": "database",
        "image": "gcr.io/upc-masters/mongo-custom:1.0",
        "ports": [
          {
            "containerPort": 27017
          }
        ],
        "env": [
          {
            "name": "DB_HOST",
            "value": "localhost"
          },
          {
            "name": "WEB_SERVER_HOST",
            "value": "localhost"
          }
        ],
        "resources": {} 
      }
    ],
    "restartPolicy": "OnFailure"
  },
  "status": {}
}
